{% extends 'base.html.twig' %}

{% block title %}Mon panier - Foot Ligue 1{% endblock %}

{% block content %}
    <h2>Mon panier</h2>
    <p>Retrouvez ici les articles que vous avez ajouté à votre panier</p>
    {{ dump(cart) }}
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Produit(s)</th>
                <th scope="col">Image</th>
                <th scope="col">Marque</th>
                <th scope="col">Quantité</th>
                <th scope="col">Prix</th>
                <th scope="col">Total</th>
            </tr>
        </thead>
        <tbody>
        {% for product in cart %}
          <tr>
                <td>{{ product.product.name }}</td>
                <td>
                    <img src="uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="70px"><br>
                </td>
                <td>{{ product.product.mark }}</td>
                <td>{{ product.quantity }}</td>
                <td>{{ (product.product.price / 100)|number_format(2, ',','.') }}€</td>
                <td>{{ ((product.product.price * product.quantity) / 100)|number_format(2, ',','.') }}€</td>
        {% endfor %}
            </tr>
        </tbody>
    </table>
{% endblock %}