{% extends 'base.html.twig' %}

{% block title %}Mes adresses - Foot Ligue 1{% endblock %}

{% block content %}
    <a href="{{ path('account_address_add') }}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
    
    <h2>Ajouter une adresse</h2>

    <div>
        <a href="{{ path('account') }}">&larr; Retourner à mon compte</a><br>
    </div>
    <hr>
    {% if app.user.addresses|length == 0 %}
        <p>Vous n'avez aucune adresse d'enregistrer, veuillez en créer une en <a href="{{ path('account_address_add') }}">cliquant ici.</a></p>
    {% endif %}
{% endblock %}
