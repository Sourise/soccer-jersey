{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Foot Ligue 1{% endblock %}

{% block content %}
    <div class="row">
    <div class="col-md-5">
        <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
    </div>
    <div class="col-md-6 auto">
        <h3>{{ product.name }}</h3>
        <p class="product-mark">{{ product.mark }}</p>
        <span class="product-price">{{ (product.price / 100)|number_format(2, ',','.') }}â‚¬</span>
        <hr>
        <p>{{ product.description }}</p>
        <hr>
        <a href="{{ path('add_to_cart', { 'id' : product.id }) }}" class="btn btn-primary">Ajouter au panier</a>
    </div>
</div>

{% endblock %}