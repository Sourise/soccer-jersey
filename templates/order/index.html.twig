{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - Foot Ligue 1{% endblock %}

{% block content %}
    <h2>Votre commande</h2>
    <p>Choisissez vos préférence de livraison avant de poursuivre votre commande</p>
    <hr>

    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form_start(form, {action:path('order_recap')}) }}
                {{ form_end(form) }}
            {% endset %}
            {{ formHtml|replace({'[br]' : '<br>'})|raw }}
        </div>
        
        <div class="col-md-6">
            <div class="text-center">
                <p class="recap">Récapitulatif de votre panier</p>
            </div>
            <div class="order-summary">              
                {% for key, product in cart %}
                    <div class="row {% if key > 0 %}mt-2{% endif %}">
                        <div class="col-2">
                            <img src="uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="65px"><br>
                        </div>
                        <div class="col-8 my-auto">
                            {{ product.product.name }}<br>
                            <small>{{ product.product.mark }}</small>
                        </div>
                        <div class="col-2 my-auto">
                            x {{ product.quantity }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}